<p style="color: green"><%= notice %></p>

<% content_for :title, "Friends" %>

<h1>All friends</h1>

<table class="table table-dark table-hover table-striped-columns table-bordered border-secondary">
  <thead>
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>Email</th>
      <th>Phone</th>
      <th>Twitter</th>
      <th>Actions</th>
    </tr>
  </thead>

  <tbody id="friends">
      <%= render @friends %>
  </tbody>
</table>

<%= link_to "Add new friend", new_friend_path, class:"btn btn-dark" %>
