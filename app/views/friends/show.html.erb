<div class="card" style="width: 50rem">
  <img src="https://live.staticflickr.com/7610/17236741316_f9554bbb48_b.jpg" class="card-img-top" alt="two dudes old friends">
  <div class="card-body">
    <h5 class="card-title">
      <strong>First name:</strong>
      <%= @friend.first_name %>
    </h5>
    <h5>
      <strong>Last name:</strong>
      <%= @friend.last_name %>
    </h5>
    <div class="card-body">
      <p>
        <strong>Email:</strong>
        <%= @friend.email %>
      </p>
      <p>
        <strong>Phone:</strong>
        <%= @friend.phone %>
      </p>
      <p>
        <strong>Twitter:</strong>
        <%= @friend.twitter %>
      </p>

    </div>
    <div>
        <%= link_to "Edit this friend", edit_friend_path(@friend), class:"btn btn-sm btn-dark" %> |
        <%= link_to "Back to friends", friends_path, class:"btn btn-sm btn-dark" %>
    </div>
  </div>
</div>
